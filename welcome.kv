#: import welcome welcome

<WelcomeScreen>:

	FloatLayout:
		canvas:
			Color:
				rgba: [0,1,0.4,.9]
			Rectangle:
				size:self.width, self.height
				pos:self.x,self.y

			Color:
				rgba: [0,0,0,.9]
			Line:
				rounded_rectangle:self.x+25,self.y+25,self.width-50,self.height-50,10
				width:1
			Color:
				rgba: [1,1,1,.95]
			Ellipse:
				id:_LogoHome
				size: 75,75
				pos:self.center_x-37, 175
				#source:"Pics/home.png.png"

		Label:
			text: "[size=90] DECA[/size]\n[size=16 ]DutchEnergyControleApplication[/size]"
			font_size: dp(24)
			color:0,0,0,.6
			halign: "center"
			markup: True

		Button:
			size_hint:(.25,1)
			pos_hint:{"center_x":.5,"center_y":.3}
			background_color:0,0,0,0
			on_press:
				root.manager.current = "menuscreen"
				root.manager.transition.direction = "left"
			Image:
				source:"Pics/on-off.png"
				center_x:self.parent.center_x
				center_y:self.parent.center_y
