#: import menu menu

<ChoiceButton@Button>

	background_color: 1,1,1,0
	#background_normal:""
	canvas.before:
		Color:
			rgba: [1,1,1,1]
		RoundedRectangle:
			size: self.size
			pos:self.pos
			radius: [10]

	font_size: dp(14)
	halign:"left"
	valign:"center"
	color:0,0,0,1
	on_press:
		self.color = [0,1,0,1] if self.color==[0,0,0,1] else [0,0,0,1]

<MenuScreen>:

	FloatLayout:
		canvas:
			Color:
				rgba: [0,1,0.4,.9]
			Rectangle:
				size:self.width, self.height
				pos:self.x,self.y
			Color:
				rgba: [0,0,0,.9]
			Line:
				rounded_rectangle:self.x+20,self.y+20,self.width-40,self.height-100,10
				width:1

		Label:
			text: "Menuscherm\nMaak uw keuze"
			font_size:dp(36)
			pos_hint:{"center_x":.5,"center_y":.75}

		GridLayout:
			cols:3
			padding:40
			spacing:20
			size_hint:(1,.3)
			pos_hint:{"center_x":.5,"center_y":.25}

			ChoiceButton:
				text:"Invoer"
				on_release:
					root.manager.current = "inputscreen"
					root.manager.transition.direction = "left"

			ChoiceButton:
				text:"Statistieken"
				on_release:
					root.manager.current = "statsscreen"
					root.manager.transition.direction = "down"

			ChoiceButton:
				text:"Analyse"
				on_release:
					root.manager.current = "analysescreen"
					root.manager.transition.direction = "right"


	ActionBar:

		size:self.width, 60
		pos_hint:{"top":.99}

		canvas:
			Color:
				rgba:[0,1,0.4,.9]
			Rectangle:
				size:self.size
				pos:self.pos

		ActionView:
			id: _toolbar
			spacing:0

			ActionPrevious:
				color:0,0,0,.3
				title:"[size=18]DECA[/size]"
				markup:True
				with_previous:False
				app_icon:"Pics/FlagofHolland.png"
				app_icon_height:20
				app_icon_width:20

			ActionButton:
				icon:"Pics/close.png"
				background_color:1,0,1,.85
				text:"Exit"
				font_size:dp(14)
				on_release:
					quit()

			ActionButton:
				icon:"Pics/settings.png"
				background_color:1,0,1,0
				text:"Instellingen"
				font_size:dp(14)
				on_release:
					root.manager.current= "settingsscreen"
					root.manager.transition.direction = "left"



